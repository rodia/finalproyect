<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.develop.rodia.kidscancount" >
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HitActivity"
            android:label="@string/title_activity_hit"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".AwardActivity"
            android:label="@string/title_activity_award"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".PycoActivity"
            android:label="@string/title_activity_pyco"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".StageActivity"
            android:label="@string/title_activity_stage"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".SetupStageActivity"
            android:label="@string/title_activity_setup_stage"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".InitStage"
            android:label="@string/title_activity_init_stage"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/title_activity_play"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.rodia.kidscancount.MainActivity" />
        </activity>
    </application>

</manifest>
